@require './_reset'
@require './font'
@require './config'


body
  font-family $baseFont
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size $baseFontSize
  line-height 1.4
  color $textColor
  font-weight 300
  +below($mobile)
    font-size $baseFontSizeSP

  // border solid 1px $baseColorq11

img
  vertical-align top

a 
  text-decoration none
  color $textColor
  &:hover
    color $textColor

svg
  width 100%
  height auto

*::selection
  background-color $baseColor
  color #fff


////////////////////////////
// common styles
.container
  padding 0 $baseSectionPaddingSide 3rem
  +sp()
    padding 0 $baseSectionPaddingSideMobile 3rem
    

.hFont
  font-family $headerFont


.h-title
  white-space pre-wrap
  padding-bottom: 0.5rem;
  margin-bottom: .75rem;
  border-bottom solid 1px $borderColor
  font-size $fontM
  font-family $headerFont
  text-align justify
  line-break: loose;

  +sp()
    font-size $fontMobileM
    padding-bottom: 0;
    margin-bottom: .5rem;
    line-height: 1.7rem;

.info-block
  font-size $fontS
  margin-bottom: .6rem;
  color: $textGreyColor
  &__category
    &__block
      display: inline-block;
      a
        color $textGreyColor

      &:last-child
        &:after
          content ''
      &:after
        content ','
        margin-right: .5rem;
.more
  color: $textGreyColor

.textline
  margin-bottom: .5rem;
  text-align justify
  line-break: loose;
  color #333
  font-size $fontS

.link-underline
  text-decoration: underline;
  &:hover
    text-decoration: none;

.link-opa
  transition all .25s ease 0s
  &:hover
    opacity 0.5

.catch
  margin 1.25rem auto 1.25rem
  display block
  +sp()
    margin .75rem auto .75rem

  &__image
    max-width: 100%

.entry-header
  margin-bottom: 1.5rem;
  border-bottom solid 1px $borderColor
  display flex
  +sp()
    display block
    margin-bottom: .5rem;

  .h-title
    border-bottom: none

  &__left
    width: 70%;
    box-sizing border-box
    padding-right: 1.0rem;
    +sp()
      width: 100%;
  &__right
    text-align: right;
    width: 30%;
    +sp()
      width: 100%;
      text-align: left;

// entry
.entry
  // padding-top: 2rem
  padding-bottom: 2rem
  margin-top: 1.5rem
  &.noborder
    border none
    padding-top: 0
  p
    text-align justify
    line-break: loose;
    color #333
    font-size $fontS
    margin-bottom .5rem
    white-space pre-wrap
  a
    text-decoration: underline;
    transition all .25s ease 0s
    &:hover
      text-decoration: none;
      opacity 0.6
  img
    max-width 100%
    margin .5rem 0

  pre
    font-size: $fontSS
    font-family $UbuntuFont

  h1,h2,h3,h4
    font-weight 500
  h1
    font-size $fontM
    margin-bottom 1.5rem
    +sp()
      font-size $fontMobileM
  h2
    font-size $fontMS
    margin-bottom 1.3rem
    +sp()
      font-size $fontMobileMS
  h3
    font-size $fontMSS
    margin-bottom 1.2rem
    +sp()
      font-size $fontMobileMSS
  h4
    font-size $fontSS
    margin-bottom 1.2rem
    +sp()
      font-size $fontMobileSS
  
  iframe 
    max-width 100%
    margin 0 auto
    margin-bottom .5rem
  
  hr
    border none
    display block
    width 100%
    height 1px
    background-color $borderColor
    margin 2rem 0

.pager
  font-family: $UbuntuFont
  width 100%
  display flex
  justify-content: space-between
  font-size $fontS
  &__unit
    max-width 35%
    display flex
    // overflow: hidden;  
    // text-overflow: ellipsis;
    // height 2.5em
    +sp()
      max-width 45%
    span
      justify-content: space-between
      word-break: break-all
      color $textGreyColor
      font-size $fontS

    &__header
      font-weight 500
      white-space nowrap
  &__left
    text-align: left
  &__right
    text-align: right

// transitions
.fade-enter-active,
.fade-leave-active {
  transition: ease opacity 0.5s;
}
.fade-enter,
.fade-leave-to {
  opacity: 0;
}
